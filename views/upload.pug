extends layouts/main

block content
    .for-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="Video") Video File
            input(type="file", id="file", name="file", required=true)
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(placeholder="Description", required=true)
            input(type="file", value="Upload Video")
        a.form-container__link(href=`.${routes.deleteVideo}`) Delete Video